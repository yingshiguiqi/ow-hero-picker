<Application x:Class="OwHeroPicker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:OwHeroPicker.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <conv:FirstCharConverter x:Key="FirstCharConverter"/>
            <conv:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <conv:HeroAvatarConverter x:Key="HeroAvatarConverter"/>
            <conv:HeroIdToAvatarConverter x:Key="HeroIdToAvatarConverter"/>
            <conv:ModeTextConverter x:Key="ModeTextConverter"/>
            <conv:ModeBgConverter x:Key="ModeBgConverter"/>
            <conv:TabVisibilityConverter x:Key="TabVisibilityConverter"/>
            <conv:TierToBorderBrushConverter x:Key="TierToBorderBrushConverter"/>
            <conv:TierToBackgroundConverter x:Key="TierToBackgroundConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
